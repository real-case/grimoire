{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/api/src",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash -c 'if [ -f ../../.venv/bin/activate ]; then source ../../.venv/bin/activate; fi && uvicorn src.main:app --reload'",
        "cwd": "apps/api"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash -c 'if [ -f ../../.venv/bin/activate ]; then source ../../.venv/bin/activate; fi && PYTHONPATH=. pytest'",
        "cwd": "apps/api"
      },
      "inputs": [
        "{projectRoot}/src/**/*.py",
        "{projectRoot}/tests/**/*.py",
        "{projectRoot}/requirements.txt",
        "{projectRoot}/pyproject.toml"
      ]
    },
    "test-coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash -c 'if [ -f ../../.venv/bin/activate ]; then source ../../.venv/bin/activate; fi && pytest --cov=src --cov-report=term-missing'",
        "cwd": "apps/api"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash -c 'if [ -f ../../.venv/bin/activate ]; then source ../../.venv/bin/activate; fi && ruff check . && mypy src'",
        "cwd": "apps/api"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash -c 'if [ -f ../../.venv/bin/activate ]; then source ../../.venv/bin/activate; fi && black .'",
        "cwd": "apps/api"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash -c 'if [ -f ../../.venv/bin/activate ]; then source ../../.venv/bin/activate; fi && alembic upgrade head'",
        "cwd": "apps/api"
      }
    }
  },
  "tags": [],
  "implicitDependencies": []
}
