# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE="Grimoire Word Information API"
API_VERSION=1.0.0
LOG_LEVEL=INFO
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://grimoire_user:password@localhost:5432/grimoire

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Data Sources
ENABLE_WORDNET=true
ENABLE_CMU_DICT=true
ENABLE_CEFR_LEVELS=true

# Rate Limiting
RATE_LIMIT_ANON_HOURLY=100
RATE_LIMIT_ANON_BURST=10
RATE_LIMIT_AUTHENTICATED_HOURLY=1000

# Caching Strategy
CACHE_TTL_COMMON_WORDS=0  # No expiration for top 5000 words
CACHE_TTL_LESS_COMMON=2592000  # 30 days
CACHE_TTL_FAILED_LOOKUPS=3600  # 1 hour

# Performance
DB_POOL_SIZE=20
DB_POOL_MAX_OVERFLOW=10
REDIS_POOL_MIN_SIZE=10
REDIS_POOL_MAX_SIZE=50

# Logging & Monitoring
SENTRY_DSN=  # Add your Sentry DSN if using
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=development

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*
